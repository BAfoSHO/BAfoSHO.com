body {
    font-family: 'Press Start 2P', cursive; /* This is a pixelated font available on Google Fonts */
    background-color: #000; /* Black background */
    color: #0f0; /* Bright green text, reminiscent of old computer displays */
}

h1, h2, h3, h4, h5, h6 {
    text-transform: uppercase; /* All-caps for headers */
}

header, main, footer {
    margin: 0 auto; /* Center the site's main content */
    width: 90%; /* Take up 90% of the viewport's width */
    max-width: 900px; /* But don't go over 900px wide */
    border: 2px solid #0f0; /* Bright green borders around main sections */
    padding: 10px;
    margin-bottom: 10px;
}

nav ul {
    list-style-type: none; /* No bullets for the nav menu */
    padding: 0; /* No padding on the nav menu */
}

nav ul li {
    display: inline; /* List items on one line */
    margin-right: 10px; /* Space between menu items */
}

nav ul li a {
    color: #0f0; /* Bright green text for links */
    text-decoration: none; /* No underline */
}

nav ul li a:hover {
    color: #ff0; /* Bright yellow text for hovered links */
}

section {
    border: 1px solid #0f0; /* Bright green borders around each section */
    padding: 5px;
    margin-bottom: 5px;
}
